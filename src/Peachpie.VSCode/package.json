{
    "name": "peachpie.vscode",
    "displayName": "Peachpie for Visual Studio Code",
    "description": "Visual Studio Code extension for Peachpie - the PHP compiler for .NET and .NET Core.",
    "version": "0.3.0",
    "publisher": "iolevel",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages", "Snippets", "Debuggers", "Productivity"
    ],
    "keywords": [
        "Peachpie", "coreclr", "dotnet", "php"
    ],
    "activationEvents": [
        "onCommand:peachpie.createProject"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "peachpie.createProject",
            "title": "Peachpie: Create Project"
        }],
        "debuggers" : [
            {
                "type": "dummy",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "php"
                    ]
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}